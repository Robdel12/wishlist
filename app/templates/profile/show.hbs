<h1>{{model.displayName}}</h1>

<div class="profile-container--content">
  <div class="profile-container--left">
    <h2>Recent Wishes</h2>
    <div class="flex-items-container">
      {{#each usersWishes as |wishlist|}}
        <div class="profile-wishlist-card">

          <h4 class="wishlist-card--title">
            {{#link-to 'wishlist.show' wishlist}}
              {{wishlist.itemName}}
            {{/link-to}}
          </h4>
          <div class="wishlist-card--content">
            <div class="row">
              <div class="large-4 columns">
                <a href="{{wishlist.itemURL}}">
                  <img alt="Image of {{wishlist.itemName}}" src="{{wishlist.imgURL}}" class="wishlist-image" />
                </a>
              </div>
              <div class="large-8 columns">
                {{#if wishlist.storeName}}
                  <p>Store: {{wishlist.storeName}}</p>
                {{/if}}
                <p>Created by: {{#link-to 'profile.show' wishlist.submittedBy}}{{wishlist.submittedByDisplayName}}{{/link-to}}</p>
                <p>Price: {{format-money wishlist.price format="%s%v"}}</p>
                {{#if wishlist.quantity}}
                  <p>Quantity: {{wishlist.quantity}}</p>
                {{/if}}
                {{#if wishlist.description}}
                  <p>{{wishlist.description}}</p>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  {{#if media.isMobile}}
    <h2>Info about {{model.displayName}}</h2>
  {{/if}}
  <div class="profile-container--right">
    <img alt="{{model.displayName}}'s profile image'" src="{{model.profileImageURL}}" />
    <p>Shirt Size: {{model.shirtSize}}</p>
    <p>Pant Size: {{model.pantSize}}</p>
    <p>Hat Size: {{model.hatSize}}</p>
    <p>Shoe Size: {{model.shoeSize}}</p>
  </div>
</div>
